/*prime number

#include <stdio.h>
int main()
{
    int n, i, flag = 0;
    printf("Enter the number you want to check the number for prime number:");
    scanf("%d", &n);
    for (i = 2; i <= n/2 ; i++)
    {
        if (n % i == 0)
        {
            flag=1;
            break;
        }
    }
    if (flag == 0)
    {
        printf("%d is a prime number", n);
    }
    else
    {
        printf("%d is not a prime number", n);
    }
    return 0;
}
*/

/*Armstrong number
#include<stdio.h>
int main(){
    int i,n,rem,res=0,temp;
    printf("Enter the number:");
    scanf("%d",&n);
    temp=n;
    while(n>0){
    rem=n%10;
    res+=rem*rem*rem;
    n/=10;
    }
    if(temp==res){
    printf("%d is a armstrong number",temp);
    }
    else{
        printf("%d is not a armstrong number",temp);
    }
    return 0;
}
*/

/*Perfect number
#include <stdio.h>
int main()
{
    int n, i, res = 0;
    printf("Enter the number:");
    scanf("%d", &n);
    for (i = 1; i <= n; i++)
    {
        if (n % i == 0)
        {
            res = res + i;
        }
    }
    if (res == 2 * n)
    {
        printf("%d is a perfect number", n);
    }
    else
    {
        printf("%d is not a perfect number", n);
    }
}
*/

/*Strong number
#include <stdio.h>

int main()
{
    int num, n, rem, sum = 0, fact, i;
    printf("Enter number: ");
    scanf("%d", &num);

    n = num;
    while (num != 0)
    {
        rem = num % 10;
        fact = 1;
        for (i = 1; i <= rem; i++)
        {
            fact = fact * i;
        }

        sum = sum + fact;
        num = num / 10;
    }

    if (sum == n)
    {
        printf("%d is Strong number", n);
    }
    else
    {
        printf("%d is not a Strong number", n);
    }

    return 0;
}
*/

/*Spy number
#include <stdio.h>
int main()
{
    int n, r, sum = 0, product = 1, num;
    printf("Enter the number:");
    scanf("%d", &n);
    num = n;
    while (n > 0)
    {
        r = n % 10;
        sum += r;
        product *= r;
        n = n / 10;
    }
    if (sum == product)
    {
        printf("%d is a spy number", num);
    }
    else
    {
        printf("%d is not a spy number", num);
    }
    return 0;
}
*/
